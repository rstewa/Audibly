    <RelativePanel x:Name="TrackPropertiesContainer">
        <TextBlock
            Style="{StaticResource PageTitleTextBlockStyle}"
            Text="Audiobook Metadata"
            x:Name="PageTitle" />

        <!--  command bar  -->
        <CommandBar
            DefaultLabelPosition="Right"
            HorizontalAlignment="Stretch"
            RelativePanel.Below="PageTitle"
            x:Name="CommandBar">
            <AppBarButton
                Click="EditButton_Click"
                Icon="Edit"
                Label="Edit"
                x:Name="EditButton" />
            <AppBarButton
                Click="SaveButton_Click"
                Icon="Accept"
                Label="Save"
                Visibility="Collapsed"
                x:Name="SaveButton" />
            <AppBarButton
                Click="CancelButton_Click"
                Icon="Cancel"
                Label="Cancel"
                Visibility="Collapsed"
                x:Name="CancelButton" />
        </CommandBar>

        <ScrollView RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="CommandBar">
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,12,0"
                        Text="Title: "
                        VerticalAlignment="Center" />
                    <TextBox
                        AcceptsReturn="True"
                        Header="Title"
                        HeaderTemplate="{StaticResource TextBoxHeaderTemplate}"
                        IsSpellCheckEnabled="True"
                        PlaceholderText="Title"
                        Text="{x:Bind Track.Title, Mode=TwoWay}" />
                </StackPanel>

                <!--  artist  -->
