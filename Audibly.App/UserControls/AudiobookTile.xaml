                Text="Mark as Completed">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE73E;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                x:Name="MarkAsIncompleteButton"
                Click="MarkAsIncomplete_OnClick"
                Text="Mark as Incomplete"
                Visibility="Collapsed">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE894;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
