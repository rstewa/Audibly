<?xml version="1.0" encoding="utf-8" ?>

<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    x:Class="Audibly.App.Views.MiniPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:marqueeTextRns="using:CommunityToolkit.Labs.WinUI.MarqueeTextRns"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Audibly.Models"
    xmlns:userControls="using:Audibly.App.UserControls"
    xmlns:vm="using:Audibly.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  ReSharper disable all Xaml.RedundantResource  -->

    <Grid PointerEntered="OnPointerEntered" PointerExited="OnPointerExited">
        <Grid.Resources>
            <ResourceDictionary x:Key="ButtonResources">
                <SolidColorBrush x:Key="ButtonBackground">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="ButtonBackgroundPointerOver">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="ButtonBackgroundPressed">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="ButtonBackgroundDisabled">Transparent</SolidColorBrush>

                <SolidColorBrush x:Key="RepeatButtonBackground">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="RepeatButtonBackgroundPointerOver">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="RepeatButtonBackgroundPressed">Transparent</SolidColorBrush>
                <SolidColorBrush x:Key="RepeatButtonBackgroundDisabled">Transparent</SolidColorBrush>
            </ResourceDictionary>
        </Grid.Resources>
        <Border
            AutomationProperties.AutomationId="NowPlayingAppTitleBar"
            Canvas.ZIndex="1"
            Height="0"
            IsHitTestVisible="True"
            VerticalAlignment="Stretch"
            x:Name="NowPlayingAppTitleBar" />

        <Grid Canvas.ZIndex="0" Grid.Column="0">

            <!--  ~1~  backdrop  @1@  -->
            <!-- <Grid> -->
            <!--     <Border BorderBrush="Transparent" BorderThickness="0"> -->
            <!--         <Grid> -->
            <!--             <Image Source="ms-appx:///Assets/DefaultCoverImage.png" Stretch="UniformToFill" /> -->
            <!--             <Image Source="{x:Bind PlayerViewModel.NowPlaying.CoverImagePath}" Stretch="UniformToFill" /> -->
            <!--         </Grid> -->
            <!--     </Border> -->
            <!--     <media:UIElementExtensions.VisualFactory> -->
            <!--         <media:PipelineVisualFactory Source="{media:BackdropSource}"> -->
            <!--             <media:BlurEffect Amount="50" /> -->
            <!--         </media:PipelineVisualFactory> -->
            <!--     </media:UIElementExtensions.VisualFactory> -->
            <!-- </Grid> -->
            <!--    -->
            <!--  ~1~  got this from RiseMediaPlayer: https://github.com/Rise-Software/Rise-Media-Player  @1@  -->
            <!-- <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch"> -->
            <!--     <Border.Background> -->
            <!--  <AcrylicBrush  -->
            <!--  FallbackColor="Transparent"  -->
            <!--  TintColor="{Binding Color, Source={ThemeResource OverlayBackgroundBrush}}"  -->
            <!--  TintOpacity="0.7" />  -->
            <!--     </Border.Background> -->
            <!-- </Border> -->

            <!--  Cover Image  -->
            <Border BorderThickness="0" Canvas.ZIndex="1">
                <Border
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    CornerRadius="0">
                    <Grid>
                        <Image Source="ms-appx:///Assets/DefaultCoverImage.png" Stretch="UniformToFill" />
                        <Image Source="{x:Bind PlayerViewModel.NowPlaying.CoverImagePath, Mode=OneWay}" Stretch="Uniform" />
                    </Grid>
                </Border>
            </Border>

            <!--  On Hover Overlay  -->
            <Border
                Canvas.ZIndex="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Visibility="Collapsed"
                x:Name="OnHoverOverlay">
                <Border.Background>
                    <AcrylicBrush
                        FallbackColor="Transparent"
                        TintColor="{Binding Color, Source={ThemeResource OverlayBackgroundBrush}}"
                        TintLuminosityOpacity="0.5"
                        TintOpacity="0.5" />
                </Border.Background>
            </Border>

            <Grid
                Canvas.ZIndex="3"
                Grid.Column="0"
                Padding="8"
                Visibility="Collapsed"
                x:Name="TitleArtistChapterSelectionGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <!--  Title, Artist, Separator & Chapter Selection  -->
                <StackPanel
                    Grid.Row="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    x:Name="TitleArtistChapterPanel">

                    <StackPanel Orientation="Vertical" x:Name="TitleArtistStackPanel">

                        <!--  Title  -->
                        <marqueeTextRns:MarqueeText
                            Behavior="Looping"
                            Direction="Left"
                            FontSize="16"
                            FontWeight="SemiBold"
                            MaxWidth="230"
                            Speed="20"
                            Text="{x:Bind PlayerViewModel.NowPlaying.Title, Mode=OneWay}"
                            x:Name="TitleMarqueeText" />

                        <!--  <TextBlock  -->
                        <!--  FontSize="16"  -->
                        <!--  Margin="0,0,0,0"  -->
                        <!--  MaxHeight="150"  -->
                        <!--  MaxWidth="300"  -->
                        <!--  Style="{StaticResource TitleTextBlockStyle}"  -->
                        <!--  Text="{x:Bind PlayerViewModel.NowPlaying.Title, Mode=OneWay}"  -->
                        <!--  TextTrimming="WordEllipsis"  -->
                        <!--  TextWrapping="NoWrap"  -->
                        <!--  ToolTipService.ToolTip="{x:Bind PlayerViewModel.NowPlaying.Title, Mode=OneWay}"  -->
                        <!--  x:Name="TitleTextBlock" />  -->

                        <!--  Artist  -->
                        <TextBlock
                            FontSize="14"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind PlayerViewModel.NowPlaying.Author, Mode=OneWay}"
                            TextTrimming="WordEllipsis"
                            TextWrapping="WrapWholeWords"
                            x:Name="ArtistTextBlock" />

                    </StackPanel>

                    <!--  separator and chapter selection  -->
                    <StackPanel Orientation="Horizontal">
                        <Border
                            Background="{ThemeResource AppBarSeparatorForeground}"
                            Height="40"
                            Width="1"
                            x:Name="Separator" />

                        <!--  chapter selection  -->
                        <ComboBox
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            HorizontalContentAlignment="Center"
                            ItemsSource="{x:Bind PlayerViewModel.NowPlaying.Chapters, Mode=OneWay}"
                            MaxWidth="250"
                            SelectedIndex="{x:Bind PlayerViewModel.ChapterComboSelectedIndex, Mode=TwoWay}"
                            SelectionChanged="ChapterCombo_SelectionChanged"
                            ToolTipService.ToolTip="Chapter Selection"
                            x:Name="ChapterCombo">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models:ChapterInfo">
                                    <TextBlock
                                        Text="{x:Bind Title}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!--#region play/pause buttons-->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    VerticalAlignment="Center"
                    x:Name="PlayPauseControls">

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PreviousChapterButton_Click"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,0"
                        ToolTipService.ToolTip="Previous Chapter"
                        VerticalAlignment="Center"
                        x:Name="PreviousChapterButton">
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="24"
                            Glyph="&#xE76B;" />
                    </Button>

                    <RepeatButton
                        BorderThickness="0"
                        Click="SkipBackButton_OnClick"
                        Delay="500"
                        Interval="100"
                        ToolTipService.ToolTip="Skip backward 10 seconds"
                        x:Name="SkipBackButton">
                        <RepeatButton.KeyboardAccelerators>
                            <KeyboardAccelerator IsEnabled="{x:Bind vm:Converters.IsNotNull(PlayerViewModel.NowPlaying), Mode=OneWay}" Key="Left" />
                        </RepeatButton.KeyboardAccelerators>
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="24"
                            Glyph="&#xED3C;" />
                    </RepeatButton>

                    <Button
                        BorderThickness="0"
                        Click="PlayPauseButton_OnClick"
                        Tag="play"
                        ToolTipService.ToolTip="Play/Pause"
                        x:Name="PlayPauseButton">
                        <Viewbox MaxHeight="32" MaxWidth="32">
                            <SymbolIcon Symbol="{x:Bind PlayerViewModel.PlayPauseIcon, Mode=OneWay}" x:Name="PlayPauseIcon" />
                        </Viewbox>
                    </Button>

                    <RepeatButton
                        BorderThickness="0"
                        Click="SkipForwardButton_OnClick"
                        Delay="500"
                        Interval="100"
                        ToolTipService.ToolTip="Skip forward 30 seconds"
                        x:Name="SkipForwardButton">
                        <RepeatButton.KeyboardAccelerators>
                            <KeyboardAccelerator IsEnabled="{x:Bind vm:Converters.IsNotNull(PlayerViewModel.NowPlaying), Mode=OneWay}" Key="Right" />
                        </RepeatButton.KeyboardAccelerators>
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="24"
                            Glyph="&#xED3D;" />
                    </RepeatButton>

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Click="NextChapterButton_Click"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,0"
                        ToolTipService.ToolTip="Next Chapter"
                        VerticalAlignment="Center"
                        x:Name="NextChapterButton">
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="24"
                            Glyph="&#xE76C;" />
                    </Button>

                </StackPanel>
                <!--#endregion play/pause buttons-->

                <userControls:NowPlayingBar Grid.Row="2" />
            </Grid>

        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowActivationStates">
                <VisualState x:Name="Activated" />
                <VisualState x:Name="Deactivated">
                    <VisualState.Setters>
                        <Setter Target="NowPlayingAppTitleBar.Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>