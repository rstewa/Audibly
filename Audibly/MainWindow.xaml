<Window
    x:Class="Audibly.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DefaultBindMode="OneWay"
    mc:Ignorable="d">

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Background="#121212">
            <Image
                Width="24"
                Margin="8,0"
                HorizontalAlignment="Left"
                Source="Assets\Logo\SoundWave\1x\book-open-flat.png" />
            <TextBlock
                x:Name="AppTitleTextBlock"
                Margin="40,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Audibly"
                TextWrapping="NoWrap" />
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="0,-10,0,0"
            HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="300" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Book Cover Image  -->
            <Border
                Grid.Row="0"
                Width="275"
                Height="275"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="transparent"
                BorderThickness="1"
                CornerRadius="10">
                <Border.Background>
                    <ImageBrush ImageSource="{x:Bind ViewModel.Audiobook.CoverImgSrc}" Stretch="UniformToFill" />
                </Border.Background>
            </Border>

            <!--  Time Remaining in book  -->
            <!--<TextBlock
                x:Name="CurPosInBook_TextBlock"
                Grid.Row="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                Text="{x:Bind ViewModel.Audiobook.CurPosInBook}"
                TextAlignment="Left"
                Visibility="Collapsed" />-->

            <!--#region Chapter Grid-->
            <Grid
                x:Name="ChapterGrid"
                Grid.Row="1"
                Width="300"
                Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="225" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="PreviousChapterButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PreviousChapterButton_Click"
                    Content="&#xE76B;"
                    FontFamily="Segoe MDL2 Assets">
                    <!--<FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76B;" />-->
                </Button>

                <ComboBox
                    x:Name="ChapterCombo"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    DisplayMemberPath="Title"
                    ItemsSource="{x:Bind ViewModel.Audiobook.Chptrs}"
                    SelectionChanged="ChapterCombo_SelectionChanged" />

                <Button
                    x:Name="NextChapterButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="NextChapterButton_Click"
                    Content="&#xE76C;"
                    FontFamily="Segoe MDL2 Assets" />
            </Grid>
            <!--#endregion-->

            <!--#region  Current Time & Progress-->
            <Grid
                x:Name="ProgressGrid"
                Grid.Row="2"
                Width="275"
                Height="50"
                Margin="0,-15,0,0"
                VerticalAlignment="Bottom">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="CurrentTime_TextBlock"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="#9d9d9d"
                    Text="{x:Bind ViewModel.Audiobook.CurTimeText}"
                    TextAlignment="Left" />

                <ProgressBar
                    x:Name="ChapterProgress_ProgressBar"
                    Grid.Column="1"
                    Width="175"
                    Margin="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#84e2c9"
                    Maximum="{x:Bind ViewModel.Audiobook.CurChptrDur}"
                    Value="{x:Bind ViewModel.Audiobook.CurTimeMs}" />

                <TextBlock
                    x:Name="CurrentChapterDuration_TextBlock"
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#9d9d9d"
                    Text="{x:Bind ViewModel.Audiobook.CurChptrDurText}"
                    TextAlignment="Right" />
            </Grid>
            <!--#endregion-->

            <Button
                x:Name="OpenAudiobookButton"
                Grid.Row="3"
                Margin="2,5,0,0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Click="OpenAudiobook_Click"
                ToolTipService.ToolTip="Open Audiobook">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;" />
            </Button>

            <!--#region Audio Playback Controls-->

            <StackPanel
                Grid.Row="3"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    x:Name="SkipBack10Button"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SkipBack10Button_Click"
                    ToolTipService.ToolTip="Skip backward 10 seconds">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="24"
                        Foreground="#4ac694"
                        Glyph="&#xED3C;" />
                </Button>

                <Button
                    x:Name="PlayPauseButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PlayPauseButton_Click"
                    Tag="play"
                    ToolTipService.ToolTip="Play/Pause">
                    <!--<FontIcon
                        x:Name="PlayPauseButtonIcon"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="24"
                        Foreground="#61ccff"
                        Glyph="&#xF5B0;" />-->
                    <Viewbox MaxWidth="24" MaxHeight="24">
                        <SymbolIcon x:Name="PlayPauseIcon" Symbol="Play" Foreground="#4ac694" />
                    </Viewbox>
                </Button>

                <Button
                    x:Name="SkipForward30Button"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SkipForward30Button_Click"
                    ToolTipService.ToolTip="Skip forward 30 seconds">
                    <FontIcon
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="24"
                        Foreground="#4ac694"
                        Glyph="&#xED3D;" />
                </Button>

            </StackPanel>

            <!--#endregion-->

        </Grid>
    </Grid>
</Window>