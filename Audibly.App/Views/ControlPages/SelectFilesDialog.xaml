<?xml version="1.0" encoding="utf-8" ?>
<Page
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    x:Class="Audibly.App.Views.ControlPages.SelectFilesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Audibly.App.Views.ControlPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Audibly.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  this dialog will show users the selected files and allow them to put them in order  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListView
            AllowDrop="True"
            CanDragItems="True"
            CanReorderItems="True"
            DragItemsCompleted="SelectedFilesListView_OnDragItemsCompleted"
            ItemsSource="{x:Bind ViewModel.SelectedFiles}"
            x:Name="SelectedFilesListView">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SelectedFile">
                    <StackPanel>
                        <TextBlock Text="{x:Bind FileName}" />
                        <TextBlock Text="{x:Bind FilePath}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
